datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AdobeAccount {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
}

model Session {
  id            String       @id @default(uuid())
  adobeAccount  AdobeAccount @relation(fields: [accountId], references: [id])
  accountId     String
  startedAt     DateTime     @default(now())
  endedAt       DateTime?
  isActive      Boolean      @default(true)
}

model WebhookLog {
  id            String    @id @default(uuid())
  sessionId     String
  accountEmail  String
  sentAt        DateTime  @default(now())
  success       Boolean
  errorMessage  String?
}